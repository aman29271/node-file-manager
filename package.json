{
	"name": "file-browser",
	"version": "1.0.0",
	"private": true,
	"bin": "./lib/index.js",
	"license": "MIT",
	"scripts": {
		"clean": "rimraf ./.cache",
		"debug": "env-cmd PORT=3000 node --inspect lib/index.js",
		"debug-app": "DEBUG=express:* env-cmd PORT=3000 NODE_ENV=development node lib/index.js",
		"dev": "run-s clean start",
		"format:js": "prettier-eslint --eslint-config-path ./.eslintrc.js --config ./.prettierrc ./lib/*.js ./lib/**/*.js --write",
		"profile:view": "node --prof-process index.log > index.log.txt",
		"start": "env-cmd nodemon lib/index.js",
		"start:profile": "node --prof --no-logfile-per-isolate --log --logfile=index.log lib/index.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"yarn run format:js"
		]
	},
	"devDependencies": {
		"@material-ui/core": "^4.9.14",
		"@material-ui/icons": "^4.9.1",
		"bulma": "^0.8.2",
		"canvas": "^2.6.1",
		"chalk": "^4.0.0",
		"ejs": "^3.1.3",
		"env-cmd": "^10.1.0",
		"eslint": "^7.0.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.20.0",
		"express": "^4.17.1",
		"express-react-views": "^0.11.0",
		"file-type": "^14.4.0",
		"flat-cache": "^2.0.1",
		"gen-uid": "^0.0.2",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.2",
		"mime-types": "^2.1.27",
		"nodemon": "^2.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"prettier-eslint-cli": "^5.0.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"rimraf": "^3.0.2",
		"send": "^0.17.1",
		"sharp": "^0.25.2",
		"uuid": "^8.0.0"
	},
	"dependencies": {
		"eslint-plugin-ejs": "^0.0.2",
		"request": "^2.88.2"
	}
}
